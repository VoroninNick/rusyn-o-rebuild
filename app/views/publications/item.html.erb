<div class="page-content article">
	<style>
		#article-content{
			float: left;

		}
		#article-image img{
			max-width: 100%;
		}

		@media(max-width: 960px){
			#article-image{
				display: inline;
				margin-right: 20px;
				margin-bottom: 44px;
			}

			#article-content{
				display: inline;
				position: relative;
				float: none;
				top:-24px;
			}
		}
