		<div id="article-content" class="g8" >
		<%= raw @article.article_content  %>
		</div>
	</div>
  <div id="last-articles" class="clearfix">
    <h3 class="page-title">Читайте також</h3>
    <% @last_articles.each do |a| %>
      <div class="item">
        <div class="image-container">
          <a href="<%= publication_item_path(a.article_url) %>">
            <%= image_tag a.article_image.url(:thumb), alt: a.article_image_alt %>
            <!--<img src="/assets/article_images/53/thumb/211680.jpg?1375865755"/>-->
          </a>
        </div>
        <div class="description-container">
          <h4 class="title">
            <a href="<%= publication_item_path(a.article_url) %>">
              <%= a.article_title %>
            </a>
          </h4>
